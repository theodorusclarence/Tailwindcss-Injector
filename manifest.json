{
  "manifest_version": 2,
  "name": "Inject Tailwindcss",
  "version": "1.0",

  "description": "Inject Tailwindcss classes from CDN. Made by Theodorus Clarence",

  "icons": {
    "128": "icons/tailwindcss-injector-128.png",
    "48": "icons/tailwindcss-injector-48.png",
    "16": "icons/tailwindcss-injector-16.png"
  },

  "permissions": ["activeTab", "tabs"],

  "background": {
    "scripts": ["inject.js"]
  },

  "page_action": {
    "default_icon": "icons/tailwindcss-injector-48.png",
    "browser_style": true
  }
}
